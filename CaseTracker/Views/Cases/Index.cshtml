@using App_LocalResources
@model IEnumerable<CaseTracker.Models.Case>

@{
	ViewBag.Title = "Index";
}

<h2>@GlobalRes.MyCases</h2>

<p>
	@Html.ActionLink(GlobalRes.Create, "Create") | @Html.ActionLink(GlobalRes.MyBook, "Book") | @Html.ActionLink(GlobalRes.MyPinakio, "Pinakio")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Aa)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DocumentTypeId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.AttorneyId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CourtId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DateOfAssignment)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DateOfSubmission)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DateOfEnd)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Notes)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ProsecutionId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DefenseId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.RecipientId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DeedResultId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DateOfDeed)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ZoneId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.IsFinished)
		</th>
	</tr>
	@using App_LocalResources
	@foreach (var item in Model)
	{
		<tr class="itemRow" onclick="location.href = '@Url.Action("Details","Cases",new { id = item.Id })'">
			<td>
				@Html.DisplayFor(modelItem => item.Aa)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DocumentType.TranslatedDescription)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Attorney.FullName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Court.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DateOfAssignment)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DateOfSubmission)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DateOfEnd)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Notes)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Prosecution.FullName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Defense.FullName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Recipient.FullName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DeedResult.TranslatedResult)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DateOfDeed)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Zone.TranslatedName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.IsFinished)
			</td>
			<td>
				@Html.ActionLink(GlobalRes.Edit, "Edit", new { id = item.Id }) |
				@Html.ActionLink(GlobalRes.Details, "Details", new { id = item.Id }) |
				@Html.ActionLink(GlobalRes.Delete, "Delete", new { id = item.Id })
			</td>
		</tr>
	}

</table>
